<h1>Listing ideas</h1>
<br />
<%= link_to 'New Idea', new_idea_path %>
<table>
  <tr class="tr_bgcolor tr_forecolor">
    <th class="ch_center width-100px">Name</th>
    <th class="ch_center width-300px">Description</th>
    <th class="ch_center width-300px">Picture</th>
    <!--<th class="width-50px"></th>-->
    <!--<th class="width-50px"></th>-->
    <th class="width-100px"></th>
  </tr>

<% @ideas.each do |idea| %>
  <tr class="td_bgcolor">
    <td class="width-100px"><%= idea.name %></td>
    <td class="width-300px"><%= idea.description %></td>
    <td class="width-100px">
    <center>
      <%= link_to image_tag(idea.picture_url, :width => 50),idea %>
    </center>
    </td>
    <td class="width-100px"><%= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />


